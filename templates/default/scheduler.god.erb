God.watch do |w|
  w.name = 'scheduler'
  w.dir = '<%= @basedir %>'
  w.uid = '<%= @user %>'
  w.gid = '<%= @group %>'
  w.log = '<%= @logs_basedir %>/scheduler.log'
  w.start = 'bundle exec ruby scheduler.rb'
  w.env = {
    'LOG_LEVEL' => '<%= @log_level %>',
    'STDOUT_SYNC' => '<%= @stdout_sync %>'
  }
  w.keepalive
end
