upstream backend_app {
  <% (0...@backend_app_processes).to_a.each do |num| %>
  server 127.0.0.1:<%= @backend_app_port_range_start + num %>;
  <% end %>
}

upstream stream {
  <% (0...@stream_processes).to_a.each do |num| %>
  server 127.0.0.1:<%= @stream_port_range_start + num %>;
  <% end %>
}

server {
  listen 80 default;

  access_log <%= @logs_basedir %>/nginx_access.log;
  error_log <%= @logs_basedir %>/nginx_error.log;

  keepalive_timeout 100;
  charset utf-8;

  location / {
    root <%= @frontend_basedir %>/build/html;
    rewrite ^(.*)$ /index.html break;
  }

  location /assets/ {
    root <%= @frontend_basedir %>/build;
  }

  location /api/ {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $http_host;

    proxy_pass http://backend_app/;
    proxy_redirect off;

    proxy_http_version 1.1;
    chunked_transfer_encoding off;
    proxy_buffering off;
    proxy_cache off;

    client_max_body_size 1k;
  }

  location /stream/ {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $http_host;

    proxy_pass http://stream/;
    proxy_redirect off;

    proxy_http_version 1.1;
    chunked_transfer_encoding off;
    proxy_buffering off;
    proxy_cache off;
    proxy_read_timeout 1h;
  }
}
